{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "run with file I/O",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Start-Process",
                "-FilePath",
                "./${fileBasenameNoExtension}",
                "-RedirectStandardInput",
                "input.txt",
                "-RedirectStandardOutput",
                "output.txt",
                "-NoNewWindow",
                "-Wait"
            ],
            "group": "build",
            "dependsOn": "compile"
        }
    ]
}